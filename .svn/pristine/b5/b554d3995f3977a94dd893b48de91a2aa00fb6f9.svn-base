		#region Métodos Privados

		private void SaveChanges()
		{	
			this.Cursor = Cursors.WaitCursor;
			if(/*_uiController.UsaLPProveedores &&*/ chkLPProveedores.CheckedItems.Count > 0)
			{
				ArrayList confLPSeleccionadas = new ArrayList();
				confLPSeleccionadas.AddRange(chkLPProveedores.CheckedItems);
				_uiController.ConfiguracionesLPProveedoresSeleccionadas = confLPSeleccionadas;
			}
			_uiController.TransladaCambioPcioDeCostoAPcioDeVtaFinal = chkTransladaCambioPCtoAPVtaBruto.Checked;
			_uiController.PcioVtaAfectaMac = chkPcioVtaAfectaMac.Checked;
			if(/*_uiController.UsaCostosIndirectos &&*/ chkCostosIndirectos.CheckedItems.Count > 0)
			{
				_uiController.ConfiguracionesCostosIndirectosSeleccionadas = new ArrayList();
				_uiController.ConfiguracionesCostosIndirectosSeleccionadas.AddRange(chkCostosIndirectos.CheckedItems);
			}
			if(/*_uiController.UsaPcioDeCostoReposicion &&*/ chkPrecioDeCostoReposicion.CheckedItems.Count > 0)
			{
				_uiController.ConfiguracionesPcioDeCostoReposicionSeleccionadas = new ArrayList();
				_uiController.ConfiguracionesPcioDeCostoReposicionSeleccionadas.AddRange(chkPrecioDeCostoReposicion.CheckedItems);
			}
			if(/*_uiController.CalculaPPP &&*/ chkPcioDeCostoPP.CheckedItems.Count > 0)
			{
				_uiController.ConfiguracionesPPPSeleccionadas = new ArrayList();
				_uiController.ConfiguracionesPPPSeleccionadas.AddRange(chkPcioDeCostoPP.CheckedItems);
			}
			if(chkValidaciones.CheckedItems.Count > 0)
			{
				_uiController.ConfiguracionesValidacionesSeleccionadas = new ArrayList();
				_uiController.ConfiguracionesValidacionesSeleccionadas.AddRange(chkValidaciones.CheckedItems);
			}
			_uiController.Execute();
			this.Cursor = Cursors.Default;
		}

		#endregion

		private void toolBarStandar_ButtonClick(object sender, System.Windows.Forms.ToolBarButtonClickEventArgs e)
		{	
			switch ( toolBarStandar.Buttons.IndexOf( e.Button ) )
			{
				case 0:
					_uiController.Previous();
					break;
				case 2:	//Guardar					
					SaveChanges();
					break;
				case 4:	//Salir					
					CloseForm();
					break;
			}						
		}

